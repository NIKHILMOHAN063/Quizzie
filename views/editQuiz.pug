extends includes/basePage
block scripts
    script(src="/assets/js/editQuiz.js")
block styles
    link(rel="stylesheet" href="/assets/css/editQuiz.css")
block page-content
    .container.editQuiz
        .login-form
            h1(style="color:#5190f5;text-align:center;fontweight:900;" ) Edit Quiz
            hr(style="background-color:blue;width:100%;height:1px;")
            .row.edit-btn-bar
                .col   
                    button.btn.ml-3(style="background-color:orange;color:white;float:right;") Delete Quiz
                    button.btn(style="background-color:#2179ED;color:white;float:right;") Edit Details
            .quiz-details.ml-4.mt-5
                .row
                    h6.label Name :  
                    span.quiz-detail-text Test
                .row
                    h6.label Date :   
                    span.quiz-detail-text Mon jan 11 2021
                .row
                    h6.label Time :
                    span.quiz-detail-text 10:40:25 AM
                .row
                    h6.label Duration :
                    span.quiz-detail-text 25 minutes
                .row
                    h6.label Type :
                    span.quiz-detail-text private
                .row
                    h6.label Quiz Code :
                    span.quiz-detail-text 123456
            .quiz-Questions.mt-5
                    .row
                        h1.ml-auto.mr-auto(style="color:#5190f5;text-align:center !important;") Questions
                        hr(style="background-color:blue;width:100%;height:1.5px;")
                    .row
                        button.btn.btn-success.btn-sm.ml-auto(style="float:right") ADD A QUESTION
                    .row
                        ul.collapsible.col.offset-s3.s6(data-collapsible='expandable')
                            li
                                .collapsible-header
                                b 1. What happens if I add a Custom User?
                                .collapsible-body
                                p
                                    | Custom User is a way to view submissions of a friend. Note: Only you can see his/her
                                    | submissions
                            li
                                .collapsible-header
                                b 2. When can I update the submissions?
                                .collapsible-body
                                p
                                    | You can explicitly update the submissions by clicking on the &quot;Retrieve my
                                    | submissions&quot; button on profile page. Also, the submissions are automatically updated
                                    | every morning with a few optimizations - 
                                    a(href='/ui/retrieval_logic') exact process

            .students-list.mt-5
                    .row
                        h1.ml-auto.mr-auto(style="color:#5190f5;text-align:center;") Submisssions
                        hr(style="background-color:blue;width:100%;height:1.5px;") 
                    .row
                        button.btn.btn-success.btn-sm.ml-auto(style="background-color:#802BD4") VIEW STATS
                    .row
                        h2 empty
                  

                    

