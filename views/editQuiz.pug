extends includes/basePage
block scripts
    script(src="/assets/js/editQuiz.js")
block styles
    link(rel="stylesheet" href="/assets/css/editQuiz.css")
block page-content
    .container.editQuiz
        .login-form
            h1(style="color:#5190f5;text-align:center;fontweight:900;" ) Edit Quiz
            hr(style="background-color:blue;width:100%;height:1px;")
            .row.edit-btn-bar
                .col   
                    button.btn.ml-3(style="background-color:orange;color:white;float:right;") Delete Quiz
                    button.btn(style="background-color:#2179ED;color:white;float:right;") Edit Details
            .quiz-details.ml-4.mt-5
                .row
                    h6.label Name :  
                    span.quiz-detail-text #{quizdetails.quizName}
                .row
                    h6.label Date :   
                    span.quiz-detail-text #{quizdetails.scheduledFor.split(' ')[0]}
                .row
                    h6.label Time :
                    span.quiz-detail-text #{quizdetails.scheduledFor.split(' ')[1]}
                .row
                    h6.label Duration :
                    span.quiz-detail-text #{quizdetails.quizDuration} minutes
                .row
                    h6.label Type :
                    span.quiz-detail-text #{quizdetails.quizType}
                .row
                    h6.label Quiz Code :
                    span.quiz-detail-text #{quizdetails.quizCode}
            .quiz-Questions.mt-5
                    .row
                        h1.ml-auto.mr-auto(style="color:#5190f5;text-align:center !important;") Questions
                        hr(style="background-color:blue;width:100%;height:1.5px;")
                    .row
                        button.btn.btn-success.btn-sm.ml-auto(style="float:right" type='button' data-toggle='modal' data-target='#showquestions') ADD A QUESTION  
                        #showquestions.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLongTitle' aria-hidden='true')
                            .modal-dialog.modal-lg.modal-dialog-scrollable(role='document')
                                .modal-content
                                    .modal-header
                                        h5#showquestions.Title.modal-title.ml-auto New Question
                                        button.close(type='button' data-dismiss='modal' aria-label='Close')
                                        span(aria-hidden='true') &times;
                                    .modal-body
                                        .container
                                            input.custom-file(type="file" accept=".csv" style="margin-bottom:10%;")
                                            .row.form-group.mb-3.d-flex.justify-content-center
                                                label.form-label.mt-3(style="text-align:center") Enter Question 
                                                input.form-control.col-12.ml-2.mb-3#question(type="text" name="quizText" placeholder="Enter Quiz Text" style="text-align:center;") 
                                            hr
                                            .row.d-flex(style="display:inline;")
                                                .col
                                                    span.options Option 1
                                                    input.form-control.mb-3.col-12#val1(type="text" name='option1' placeholder="Option 1")
                                                .col
                                                    span.options Option 2
                                                    input.form-control.mb-3.col-12#val2(type="text" name='option2' placeholder="Option 2" )
                                            .row.d-flex(style="display:inline;")
                                                .col
                                                    span.options Option 3
                                                    input.form-control.mb-3.col-12#val3(type="text" name='option3' placeholder="Option 3" )
                                                .col
                                                    span.options Option 4
                                                    input.form-control.mb-3.col-12#val4(type="text" name='option4' placeholder="Option 4")
                                            hr
                                            .row.form-group.d-flex.justify-content-center
                                                select.form-control.col-5#selectedoption(name="")
                                                    option(selected="None" value="None" ) None
                                                    option#op1(value="option1") option 1
                                                    option#op2(value="option2") option 2
                                                    option#op3(value="option3") option 3
                                                    option#op4(value="option4") option 4
                                            hr
                                            .row.mt-5.d-flex.justify-content-center
                                                button.btn.btn.btn-success.btn-sm(type="button" onclick="getdata()") ADD QUESTION
                                    
            .students-list.mt-5
                    .row
                        h1.ml-auto.mr-auto(style="color:#5190f5;text-align:center;") Submisssions
                        hr(style="background-color:blue;width:100%;height:1.5px;") 
                    .row
                        button.btn.btn-sm.ml-auto(style="background-color:#802BD4") VIEW STATS

                  

                    

