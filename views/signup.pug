extends includes/basePage
block head-styles
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='google-signin-scope' content='profile email')
    meta(name='google-signin-client_id' content='MY_CLIENT_ID_ON_GOOGLE_DEV.apps.googleusercontent.com')
    script(src='https://apis.google.com/js/api.js')
    script(src='https://apis.google.com/js/platform.js' async='' defer='')
    link(rel="stylesheet" href="/assets/css/login.css")

block page-content
    body(style='background:rgb(240, 255, 240)')  
       
        div.main(style='padding-bottom:12%')
            p.head(style='margin-left:2.5em')
                b Join the force!!

            .g-signin2(data-onsuccess='onSignIn' style='margin-left:13em;margin-bottom:1.5em;width:150px;height:35px' )
            
            input.name(type='text' placeholder='Name')
            p#namealert
            input.phone(type='number' placeholder='Phone Number')
            p#phonealert
            input.email(type='email' placeholder='Email' )
            p#emailalert
            input.password(type='password' placeholder='Password')
            p#passwordalert
        
            button.btn(type="button" onclick='signup()') Sign Up
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js")
        script(src="/assets/js/signup.js")
        