extends includes/basePage
block head-styles
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet" href="/assets/css/dashboard.css")
block page-content
        .container.dashboard-page
                    h1.dash-head Dashboard
                    .row.tabs
                        button.btn.col-4#0(type="button" onclick="openPage('Quizzes', this,0)") Quizzes
                        button.btn.col-4#1(type="button"  onclick="openPage('History', this,1)") History
                        button.btn.col-4#2(type="button" onclick="openPage('Profile', this,2)") Profile
                    .row 
                        #Quizzes.tabcontent
                            h3 Quizzes 
                            p Home is where the heart is..
                        #History.tabcontent
                            h3 History 
                            p Home is where the heart is..
                        #Profile.tabcontent
                            .details(style="margin-bottom:10%")
                            h4
                                label  name 
                                |  : #{user.name}
                                .row
                            h4
                                label Email
                                |  : #{user.email}
                            if user.mobileNumber
                                .row
                                h4
                                    label Phone Number
                                    |  : #{user.mobileNumber}
                            .row
                            h4
                                label Quizzes Enrolled
                                |  : 0
                            .row
                            h4
                                label Quizzes Completed
                                |  : 0

                            a(href='/ui/dashboard/updateProfile')
                                button.btn.btn-primary(type='button') Update Profile
            
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
        script(src="/assets/js/dashboard.js")


